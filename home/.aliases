alias sagi='yes | sudo apt-get install'
alias la='ls -al'
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'

# typo fixes
alias c=cd
alias sl=ls
alias l=ls
alias v=vim
alias cim=vim
alias nom=npm
alias gi=git

# colours and ANSI lines
alias tree="tree -CA"

# stop vim taking ages, so it doesn't look for X server
# Also, tabs by default. -O and -o will override, don't worry.
alias vim='vim -X -p'

# list by creation date (I think)
alias lr='ls -latr'

# Git
alias g=git
alias s='git status'
alias d='git diff'
alias o='git log'
alias b='git branch -a'

alias webserver='python -m SimpleHTTPServer'
alias grep='grep --color=auto'

